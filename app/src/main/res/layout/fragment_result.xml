<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_result_48"
        android:layout_width="153dp"
        android:layout_height="130dp"
        android:contentDescription="@string/ic_result_48.description"
        android:src="@drawable/ic_result_48px" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш результат: "
        android:fontFamily="@font/open_sans_condensed_italic"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semi_condensed_bold"
        android:text="Назад в welcome"/>

    <Button
        android:id="@+id/back_button_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semi_condensed_bold"
        android:text="Назад в quiz"/>
</LinearLayout>